<resources>
    <!-- Base application theme. -->
    <style name="NG_DefaultTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryBackground</item>

    </style>




    <style name="NG_DefaultTheme.ContentBottomBarStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/colorBottomBar</item>
        <item name="itemTextColor">@color/colorBottomBarText</item>
        <item name="paddingStart">@dimen/ng_bottombar_padding</item>
        <item name="tabTextColor">@color/colorBottomBarText</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name ="android:layout_width">match_parent</item>
        <item name ="android:layout_height">@dimen/ng_content_bottombar_height</item>
        <item name ="layout_behavior">@string/hide_bottom_view_on_scroll_behavior</item>
        <item name="itemIconTint">@drawable/content_bottombar_selector</item>
        <item name="android:layout_gravity">bottom</item>

    </style>
    

    <style name="NG_DefaultTheme.Launcher">
        <item name="android:windowBackground">@drawable/laucher_back</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="NG_DefaultTheme.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="NG_DefaultTheme.Dashboard" parent="CardView">
        <item name="cardBackgroundColor">@color/colorDashboardBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dashboard_margin_corners</item>
        <item name="android:layout_marginTop">@dimen/dashboard_margin_top_bottom</item>
        <item name="android:layout_marginRight">@dimen/dashboard_margin_corners</item>
        <item name="cardCornerRadius">@dimen/dashboard_corner_radius</item>
        <item name="cardElevation">@dimen/dashboard_elevation</item>
        <item name="strokeColor">@color/colorPrimaryDark</item>
        <item name="strokeWidth">@dimen/dashboard_stroke_width</item>
    </style>

    <style name="NG_DefaultTheme.DashboardPortalGrid">
        <item name = "android:layout_width"> match_parent </item>
        <item name = "android:layout_height"> wrap_content</item>
        <item name = "android:layout_marginTop"> @dimen/dashboard_labelSize</item>
        <item name = "android:clipToPadding"> false</item>
        <item name = "android:overScrollMode"> never</item>
        <item name = "android:scrollbars"> none</item>
    </style>

    <style name="NG_DefaultTheme.DashboardPortalGridSmall">
        <item name = "android:layout_width"> match_parent </item>
        <item name = "android:layout_height"> wrap_content</item>
        <item name = "android:layout_marginTop"> @dimen/dashboard_labelSize</item>
        <item name = "android:clipToPadding"> false</item>
        <item name = "android:overScrollMode"> never</item>
        <item name = "android:scrollbars"> none</item>
    </style>

    <style name="NG_DefaultTheme.DashboardPortalList">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_marginTop">@dimen/dashboard_labelSize</item>
        <item name = "android:clipToPadding">false</item>
        <item name = "android:paddingBottom">8dp</item>
        <item name = "android:paddingLeft">8dp</item>
        <item name = "android:paddingRight">8dp</item>
        <item name = "android:overScrollMode">never</item>
        <item name = "android:paddingTop">8dp</item>
        <item name = "android:scrollbars">none</item>
    </style>



</resources>