<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ferox.ip.newgrounds.Views.Dashboard
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:labelVisible="false">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/ng_content_toolbar_height"
                android:text="Featured content"
                android:textSize="@dimen/dashboard_textSize"
                android:paddingTop="8dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"/>
        </ferox.ip.newgrounds.Views.Dashboard>

        <ferox.ip.newgrounds.Views.Dashboard
            android:id="@+id/featured_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dashboard_margin_corners"
            android:layout_marginTop="@dimen/dashboard_margin_top_bottom"
            android:layout_marginRight="@dimen/dashboard_margin_corners"
            app:cardCornerRadius="@dimen/dashboard_corner_radius"
            app:labelVisible="false">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/main_img">
            </ImageView>
        </ferox.ip.newgrounds.Views.Dashboard>

        <ferox.ip.newgrounds.Views.Dashboard
            android:id="@+id/featured_movies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dashboard_margin_corners"
            android:layout_marginTop="@dimen/dashboard_margin_top_bottom"
            android:layout_marginRight="@dimen/dashboard_margin_corners"
            app:cardCornerRadius="@dimen/dashboard_corner_radius"
            app:labelText="Featured movies">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/featured_movies_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dashboard_labelSize"
                android:clipToPadding="false"
                android:paddingBottom="8dp"
                android:paddingStart="@dimen/content_padding"
                android:overScrollMode="never"
                android:paddingTop="8dp"
                android:scrollbars="none" />
        </ferox.ip.newgrounds.Views.Dashboard>

        <ferox.ip.newgrounds.Views.Dashboard
            android:id="@+id/featured_games"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dashboard_margin_corners"
            android:layout_marginTop="@dimen/dashboard_margin_top_bottom"
            android:layout_marginRight="@dimen/dashboard_margin_corners"
            app:cardCornerRadius="@dimen/dashboard_corner_radius"
            app:labelText="Featured games">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/featured_games_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dashboard_labelSize"
                android:clipToPadding="false"
                android:paddingBottom="8dp"
                android:paddingLeft="@dimen/content_padding"
                android:overScrollMode="never"
                android:paddingTop="8dp"
                android:scrollbars="none" />
        </ferox.ip.newgrounds.Views.Dashboard>

        <ferox.ip.newgrounds.Views.Dashboard
            android:id="@+id/featured_art"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dashboard_margin_corners"
            android:layout_marginTop="@dimen/dashboard_margin_top_bottom"
            android:layout_marginRight="@dimen/dashboard_margin_corners"
            app:cardCornerRadius="@dimen/dashboard_corner_radius"
            app:labelText="Featured art">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/featured_art_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dashboard_labelSize"
                android:clipToPadding="false"
                android:paddingLeft="@dimen/content_padding_small"
                android:paddingBottom="8dp"
                android:overScrollMode="never"
                android:paddingTop="8dp"
                android:scrollbars="none" />
        </ferox.ip.newgrounds.Views.Dashboard>

        <ferox.ip.newgrounds.Views.Dashboard
            android:id="@+id/featured_audio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dashboard_margin_corners"
            android:layout_marginTop="@dimen/dashboard_margin_top_bottom"
            android:layout_marginRight="@dimen/dashboard_margin_corners"
            app:cardCornerRadius="@dimen/dashboard_corner_radius"
            app:labelText="Featured audio">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/featured_audio_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dashboard_labelSize"
                android:clipToPadding="false"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"

                android:overScrollMode="never"
                android:paddingTop="8dp"
                android:scrollbars="none" />
        </ferox.ip.newgrounds.Views.Dashboard>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/footer_skyline"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"/>



    </LinearLayout>
</androidx.core.widget.NestedScrollView>