<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <jewpigeon.apps.newgrounds.Views.Dashboard
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorDashboardBackground"
            app:labelVisible="false">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/ng_content_toolbar_height"
                android:text="Featured content"
                android:textSize="@dimen/dashboard_textSize"
                android:paddingTop="8dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"/>
        </jewpigeon.apps.newgrounds.Views.Dashboard>

        <jewpigeon.apps.newgrounds.Views.Dashboard
            android:id="@+id/featured_picture"
            style="@style/AppTheme.Dashboard"
            app:labelVisible="false">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/main_header">
            </ImageView>
        </jewpigeon.apps.newgrounds.Views.Dashboard>

        <jewpigeon.apps.newgrounds.Views.Dashboard
            android:id="@+id/featured_movies"
            style="@style/AppTheme.Dashboard"
            app:labelText="Featured Movies"
            app:labelIcon="@drawable/ng_movies_icon"
            app:PanelButtonsList="@menu/dashboard_featured_standart_buttons">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/featured_movies_grid"
                style="@style/AppTheme.DashboardPortalGrid"/>
        </jewpigeon.apps.newgrounds.Views.Dashboard>

        <jewpigeon.apps.newgrounds.Views.Dashboard
            android:id="@+id/featured_games"
            style="@style/AppTheme.Dashboard"
            app:labelIcon="@drawable/ng_games_icon"
            app:PanelButtonsList="@menu/dashboard_featured_standart_buttons">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/featured_games_grid"
             style="@style/AppTheme.DashboardPortalGrid" />
        </jewpigeon.apps.newgrounds.Views.Dashboard>

        <jewpigeon.apps.newgrounds.Views.Dashboard
            android:id="@+id/featured_art"
            style="@style/AppTheme.Dashboard"
            app:labelText="Featured Art"
            app:labelIcon="@drawable/ng_art_icon"

            app:PanelButtonsList="@menu/dashboard_featured_standart_buttons">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/featured_art_grid"
                style="@style/AppTheme.DashboardPortalGridSmall" />
        </jewpigeon.apps.newgrounds.Views.Dashboard>

        <jewpigeon.apps.newgrounds.Views.Dashboard
            android:id="@+id/featured_audio"
            style="@style/AppTheme.Dashboard"
            app:labelText="Featured Audio"
            app:labelIcon="@drawable/ng_audio_icon"
            app:PanelButtonsList="@menu/dashboard_featured_standart_buttons">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/featured_audio_list"
                style="@style/AppTheme.DashboardPortalList"/>
        </jewpigeon.apps.newgrounds.Views.Dashboard>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/footer_skyline"
            android:layout_marginTop="8dp"
            android:layout_gravity="bottom"
            android:adjustViewBounds="true"/>



    </LinearLayout>
</androidx.core.widget.NestedScrollView>