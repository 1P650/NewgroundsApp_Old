<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <jewpigeon.apps.newgrounds.Views.Dashboard
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorDashboardBackground"
            app:labelVisible="false">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/ng_content_toolbar_height"
            android:text="Movies Portal"
            android:textSize="@dimen/dashboard_textSize"
            android:paddingTop="8dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>
        </jewpigeon.apps.newgrounds.Views.Dashboard>
        <jewpigeon.apps.newgrounds.Views.Dashboard
            android:id="@+id/movies_portal_brand_movies"
            style="@style/NG_DefaultTheme.Dashboard"
            app:labelIcon="@drawable/ng_movies_icon"
            app:labelText="Brand Spankin' New Movies"
            app:PanelButtonsList="@menu/dashboard_portals_stardart_buttons">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/movies_portal_brand_grid"
                style="@style/NG_DefaultTheme.DashboardPortalGrid"/>/>
        </jewpigeon.apps.newgrounds.Views.Dashboard>

        <jewpigeon.apps.newgrounds.Views.Dashboard
            android:id="@+id/movies_portal_popular_movies"
            style="@style/NG_DefaultTheme.Dashboard"
            app:labelIcon="@drawable/ng_movies_icon"
            app:labelText="Popular Movies"
            app:PanelButtonsList="@menu/dashboard_portals_stardart_buttons">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/movies_portal_popular_grid"
                style="@style/NG_DefaultTheme.DashboardPortalGrid"/>/>
        </jewpigeon.apps.newgrounds.Views.Dashboard>

        <jewpigeon.apps.newgrounds.Views.Dashboard
            android:id="@+id/movies_portal_month_movies"
            style="@style/NG_DefaultTheme.Dashboard"
            app:labelText="Best Movies This Month"
            app:labelIcon="@drawable/ng_movies_icon"
            app:PanelButtonsList="@menu/dashboard_portals_stardart_buttons">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/movies_portal_month_grid"
                style="@style/NG_DefaultTheme.DashboardPortalGrid"/> />
        </jewpigeon.apps.newgrounds.Views.Dashboard>

        <jewpigeon.apps.newgrounds.Views.Dashboard
            android:id="@+id/movies_portal_year_movies"
            style="@style/NG_DefaultTheme.Dashboard"
            app:labelText="Best Movies This Year"
            app:labelIcon="@drawable/ng_movies_icon"
            app:PanelButtonsList="@menu/dashboard_portals_stardart_buttons">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/movies_portal_year_grid"
                style="@style/NG_DefaultTheme.DashboardPortalGrid"/> />
        </jewpigeon.apps.newgrounds.Views.Dashboard>

        <jewpigeon.apps.newgrounds.Views.Dashboard
            android:id="@+id/movies_portal_classic_movies"
            style="@style/NG_DefaultTheme.Dashboard"
            app:labelText="High Ranking Classics"
            app:labelIcon="@drawable/ng_movies_icon"
            app:PanelButtonsList="@menu/dashboard_portals_stardart_buttons">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/movies_portal_classic_grid"
                style="@style/NG_DefaultTheme.DashboardPortalGrid"/>/>
        </jewpigeon.apps.newgrounds.Views.Dashboard>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/footer_skyline"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>