<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ng_games_portal_scroll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:orientation="vertical">

        <jewpigeon.apps.newgrounds.Views.Dashboard
            android:id="@+id/games_portal_brand_movies"
            style="@style/NG_DefaultTheme.Dashboard"
            app:labelIcon="@drawable/ng_movies_icon"
            app:labelText="Brand Spankin' New Games"
            app:labelMenu="@array/portal_buttons"
            app:labelMenuType="strings">

            <jewpigeon.apps.newgrounds.Views.AutofitGridLayout
                android:id="@+id/games_portal_brand_grid"
                style="@style/NG_DefaultTheme.DashboardPortalGrid"/>
        </jewpigeon.apps.newgrounds.Views.Dashboard>

        <jewpigeon.apps.newgrounds.Views.Dashboard
            android:id="@+id/games_portal_popular_movies"
            style="@style/NG_DefaultTheme.Dashboard"
            app:labelIcon="@drawable/ng_movies_icon"
            app:labelMenu="@array/portal_buttons"
            app:labelMenuType="strings"
            app:labelText="Popular Games">

            <jewpigeon.apps.newgrounds.Views.AutofitGridLayout
                android:id="@+id/games_portal_popular_grid"
                style="@style/NG_DefaultTheme.DashboardPortalGrid" />
        </jewpigeon.apps.newgrounds.Views.Dashboard>

        <jewpigeon.apps.newgrounds.Views.Dashboard
            android:id="@+id/games_portal_month_movies"
            style="@style/NG_DefaultTheme.Dashboard"
            app:labelIcon="@drawable/ng_movies_icon"
            app:labelMenu="@array/portal_buttons"
            app:labelMenuType="strings"
            app:labelText="Best Games This Month">

            <jewpigeon.apps.newgrounds.Views.AutofitGridLayout
                android:id="@+id/games_portal_month_grid"
                style="@style/NG_DefaultTheme.DashboardPortalGrid" />
        </jewpigeon.apps.newgrounds.Views.Dashboard>

        <jewpigeon.apps.newgrounds.Views.Dashboard
            android:id="@+id/games_portal_year_movies"
            style="@style/NG_DefaultTheme.Dashboard"
            app:labelIcon="@drawable/ng_movies_icon"
            app:labelMenu="@array/portal_buttons"
            app:labelMenuType="strings"
            app:labelText="Best Games This Year">

            <jewpigeon.apps.newgrounds.Views.AutofitGridLayout
                android:id="@+id/games_portal_year_grid"
                style="@style/NG_DefaultTheme.DashboardPortalGrid" />
        </jewpigeon.apps.newgrounds.Views.Dashboard>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/footer_skyline"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>