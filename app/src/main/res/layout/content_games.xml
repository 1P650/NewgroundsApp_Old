<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <jewpigeon.apps.newgrounds.Views.Dashboard
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:labelVisible="false">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/ng_content_toolbar_height"
                android:text="Games Portal"
                android:textSize="@dimen/dashboard_textSize"
                android:paddingTop="8dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"/>
        </jewpigeon.apps.newgrounds.Views.Dashboard>

        <jewpigeon.apps.newgrounds.Views.Dashboard
            android:id="@+id/games_portal_brand_movies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dashboard_margin_corners"
            android:layout_marginTop="@dimen/dashboard_margin_top_bottom"
            android:layout_marginRight="@dimen/dashboard_margin_corners"
            app:PanelButtonsList="@menu/dashboard_portals_stardart_buttons"
            app:cardCornerRadius="@dimen/dashboard_corner_radius"
            app:labelIcon="@drawable/ng_movies_icon"
            app:labelText="Brand Spankin' New Games">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/games_portal_brand_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dashboard_labelSize"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingStart="@dimen/content_padding"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:scrollbars="none" />
        </jewpigeon.apps.newgrounds.Views.Dashboard>

        <jewpigeon.apps.newgrounds.Views.Dashboard
            android:id="@+id/games_portal_popular_movies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dashboard_margin_corners"
            android:layout_marginTop="@dimen/dashboard_margin_top_bottom"
            android:layout_marginRight="@dimen/dashboard_margin_corners"
            app:PanelButtonsList="@menu/dashboard_portals_stardart_buttons"
            app:cardCornerRadius="@dimen/dashboard_corner_radius"
            app:labelIcon="@drawable/ng_movies_icon"
            app:labelText="Popular Games">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/games_portal_popular_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dashboard_labelSize"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingStart="@dimen/content_padding"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:scrollbars="none" />
        </jewpigeon.apps.newgrounds.Views.Dashboard>

        <jewpigeon.apps.newgrounds.Views.Dashboard
            android:id="@+id/games_portal_month_movies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dashboard_margin_corners"
            android:layout_marginTop="@dimen/dashboard_margin_top_bottom"
            android:layout_marginRight="@dimen/dashboard_margin_corners"
            app:cardCornerRadius="@dimen/dashboard_corner_radius"
            app:labelText="Best Games This Month"
            app:labelIcon="@drawable/ng_movies_icon"
            app:PanelButtonsList="@menu/dashboard_portals_stardart_buttons">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/games_portal_month_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dashboard_labelSize"
                android:clipToPadding="false"
                android:paddingBottom="8dp"
                android:paddingStart="@dimen/content_padding"
                android:overScrollMode="never"
                android:paddingTop="8dp"
                android:scrollbars="none" />
        </jewpigeon.apps.newgrounds.Views.Dashboard>

        <jewpigeon.apps.newgrounds.Views.Dashboard
            android:id="@+id/games_portal_year_movies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dashboard_margin_corners"
            android:layout_marginTop="@dimen/dashboard_margin_top_bottom"
            android:layout_marginRight="@dimen/dashboard_margin_corners"
            app:cardCornerRadius="@dimen/dashboard_corner_radius"
            app:labelText="Best Games This Year"
            app:labelIcon="@drawable/ng_movies_icon"
            app:PanelButtonsList="@menu/dashboard_portals_stardart_buttons">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/games_portal_year_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dashboard_labelSize"
                android:clipToPadding="false"
                android:paddingBottom="8dp"
                android:paddingStart="@dimen/content_padding"
                android:overScrollMode="never"
                android:paddingTop="8dp"
                android:scrollbars="none" />
        </jewpigeon.apps.newgrounds.Views.Dashboard>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/footer_skyline"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>