<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:background="@color/colorDashboardBackground">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dashboard_label"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/colorDashboardLabelBackground"
        android:layout_height="@dimen/ng_content_toolbar_height">

        <TextView
            android:id="@+id/dashboard_label_name"
            android:layout_width="134dp"
            android:layout_height="31dp"
            android:layout_marginStart="8dp"
            android:text="@string/LabelNameDefault"
            android:textSize="@dimen/dashboard_textSize"
            app:layout_constraintBottom_toBottomOf="@+id/dashboard_label_icon"
            app:layout_constraintStart_toEndOf="@+id/dashboard_label_icon"
            app:layout_constraintTop_toTopOf="@+id/dashboard_label_icon" />

        <ImageView
            android:id="@+id/dashboard_label_icon"
            android:layout_width="@dimen/dashboard_labelSize"
            android:layout_height="@dimen/dashboard_labelSize"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/label_default_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/dashboard_container"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/colorDashboardBackground"
        android:layout_height="wrap_content">
    </LinearLayout>

</androidx.cardview.widget.CardView>