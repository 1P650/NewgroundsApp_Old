<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="@dimen/dashboard_labelSizeHalf">
        <shape 
            android:shape="rectangle" >
            <gradient
                android:startColor="@color/colorDashboardLabelGradientLower_start"
                android:endColor="@color/colorDashboardLabelGradientLower_end"
                android:type="linear"
                android:angle="90">
            </gradient>
        </shape>
    </item>
    <item android:gravity="top" android:height="@dimen/dashboard_labelSizeHalf">
        <shape android:shape="rectangle" >
            <gradient
                android:startColor="@color/colorDashboardLabelGradientHigher_start"
                android:endColor="@color/colorDashboardLabelGradientHigher_end"
                android:type="linear"
                android:angle="90"
                />
            <corners android:topLeftRadius="@dimen/dashboard_corner_radius"
          android:topRightRadius="@dimen/dashboard_corner_radius">

            </corners>
        </shape>
    </item>

    <item android:height="2dp"
        android:gravity="bottom">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorDashboardBorderline"></solid>
        </shape>
    </item>

</layer-list>