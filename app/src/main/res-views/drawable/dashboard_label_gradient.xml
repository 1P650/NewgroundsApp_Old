<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape 
            android:shape="rectangle">
            <gradient
                android:endColor="@color/colorDashboardLabelGradientStart"
                android:startColor="@color/colorDashboardLabelGradientCenter"
                android:type="linear"
                android:angle="90"
                />
        </shape>
    </item>
    <item android:bottom="20dp">
        <shape android:shape="rectangle">
            <gradient
                android:endColor="@color/colorDashboardLabelGradientEnd"
                android:startColor="@color/colorPrimaryBackground"
                android:type="linear"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:height="2dp"
        android:gravity="bottom">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryDark"></solid>
        </shape>
    </item>

</layer-list>